
on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]

jobs:
  build-and-test:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.10"

      - name: Install dependencies
        run: |
          python3 -m pip install --upgrade pip
          python3 -m pip install -r app/requirements.txt

      - name: Run tests
        run: |
          python3 -m unittest discover -s app/tests || echo "No tests yet"

  docker-build-push:
    runs-on: ubuntu-latest
    needs: build-and-test
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Log in to Docker Hub
        uses: docker/login-action@v2
        with:
          username: ${{ secrets.DOCKER_USERNAME }}
          password: ${{ secrets.DOCKER_PASSWORD }}

      - name: Build Docker image
        run: |
          docker build -t ${{ secrets.DOCKER_USERNAME }}/flask-ci-cd:latest .

      - name: Push Docker image
        run: |
          docker push ${{ secrets.DOCKER_USERNAME }}/flask-ci-cd:latest

  deploy-to-k8s:
    runs-on: ubuntu-latest
    needs: docker-build-push
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Set up kubectl
        uses: azure/setup-kubectl@v3
        with:
          version: v1.34.0

      - name: Deploy to Kubernetes
        env:
          IMAGE_NAME: ${{ secrets.DOCKER_USERNAME }}/flask-ci-cd:latest
        run: |
          # Update image in deployment.yaml
          sed -i "s|image: .*|image: $IMAGE_NAME|g" k8s/deployment.yaml
          
          # Apply manifests
          kubectl apply -f k8s/
          
          # Verify rollout
          kubectl rollout status deployment/flask-app

